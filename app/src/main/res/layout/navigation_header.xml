<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="177dp"
    android:background="#FFF"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border_bottom"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <TextView
            android:id="@+id/text_nav_header_greetings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Hi"
            android:textColor="#383838"
            android:textSize="27sp"
            android:textStyle="bold"
            app:fontFamily="@font/roboto_bold" />

        <TextView
            android:id="@+id/text_nav_header_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/text_nav_header_greetings"
            android:layout_toRightOf="@id/text_nav_header_greetings"
            android:hint="Name"
            android:textColor="#383838"
            android:textColorHint="#383838"
            android:textSize="27sp"
            android:textStyle="bold"
            app:fontFamily="@font/roboto_bold" />

        <TextView
            android:id="@+id/text_nav_header_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_toEndOf="@+id/text_nav_header_name"
            android:layout_toRightOf="@+id/text_nav_header_name"
            android:text="."
            android:textColor="#383838"
            android:textSize="27sp"
            android:textStyle="bold"
            app:fontFamily="@font/roboto_bold" />


    </RelativeLayout>

</LinearLayout>