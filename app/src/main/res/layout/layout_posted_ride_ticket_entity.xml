<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="188dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="7dp"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:orientation="vertical"
    android:padding="2dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/border_rectangle_unfilled_light">

        <RelativeLayout
            android:id="@+id/driver_date_time_post"
            android:layout_width="128dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/border_side">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <RelativeLayout
                    android:id="@+id/driver_date_entity_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/driver_text_date_post"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Date"
                        android:textStyle="bold"
                        android:textColor="#555B5B"
                        android:textSize="15sp"
                        app:fontFamily="@font/roboto_bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/driver_time_entity_post"
                    android:layout_below="@id/driver_date_entity_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:id="@+id/driver_text_time_post"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Time"
                        android:textColor="#555B5B"
                        android:textSize="15sp"
                        android:fontFamily="@font/roboto" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/driver_pn_entity_post"
                    android:layout_below="@id/driver_time_entity_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/driver_passenger_number_image_post"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_person"
                        android:tint="#262626"/>

                    <TextView
                        android:id="@+id/driver_text_passenger_number_post"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/driver_passenger_number_image_post"
                        android:hint="#"
                        android:textColor="#555B5B"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto" />

                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/driver_origin_destination_rl_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/driver_date_time_post">

            <RelativeLayout
                android:id="@+id/driver_image_to_from_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/driver_origin_ticket_post"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/border_oval_fill" />

                <RelativeLayout
                    android:id="@+id/driver_vert_two_ticket_post"
                    android:layout_width="3dp"
                    android:layout_height="58dp"
                    android:layout_below="@id/driver_origin_ticket_post"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/path_solid" />

                <ImageView
                    android:id="@+id/driver_destination_post"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_below="@id/driver_vert_two_ticket_post"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/border_oval_fill" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/driver_relative_layout_request_new_ride_origin_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/driver_image_to_from_post">

                <TextView
                    android:id="@+id/driver_text_pickup_stable_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pickup location"
                    android:textColor="#262626"
                    android:textSize="12sp"
                    android:fontFamily="@font/roboto_bold" />

                <TextView
                    android:id="@+id/driver_text_origin_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/driver_text_pickup_stable_post"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:hint="Pickup Location Name"
                    android:textColor="#555B5B"
                    android:textSize="15sp"
                    android:fontFamily="@font/roboto" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/driver_relative_layout_request_new_ride_destination_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/driver_relative_layout_request_new_ride_origin_post"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="8dp"
                android:layout_toRightOf="@id/driver_image_to_from_post">

                <TextView
                    android:id="@+id/driver_text_destination_stable_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Destination location"
                    android:textColor="#262626"
                    android:textSize="12sp"
                    android:fontFamily="@font/roboto_bold" />

                <TextView
                    android:id="@+id/driver_text_destination_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/driver_text_destination_stable_post"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:hint="Destination Location Name"
                    android:textColor="#555B5B"
                    android:textSize="15sp"
                    android:fontFamily="@font/roboto" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/driver_origin_destination_rl_post"
            android:layout_toRightOf="@+id/driver_date_time_post">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/rider_text_earnings_entity_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Earnings:"
                    android:textSize="12sp"
                    android:layout_centerVertical="true"
                    app:fontFamily="@font/roboto_bold"
                    android:textColor="#262626"/>

                <TextView
                    android:layout_toRightOf="@+id/rider_text_earnings_entity_post"
                    android:id="@+id/driver_text_earnings_entity_post"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="$"
                    android:textSize="15sp"
                    android:textColor="#555B5B"
                    android:fontFamily="@font/roboto" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/driver_text_earnings_entity_post"
                    android:text="(CAD)"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"
                    android:textColor="#555B5B"
                    android:fontFamily="@font/roboto"/>
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/driver_more_information_entity_request_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_more_horiz"
                android:tint="#262626"/>


        </RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>