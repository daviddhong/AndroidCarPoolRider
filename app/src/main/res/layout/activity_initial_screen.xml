<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="158dp"
            android:layout_alignParentBottom="true">

            <RelativeLayout
                android:id="@+id/init_screen_sign_up"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:background="@drawable/background_rectangle_filled"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign up"
                    android:layout_centerInParent="true"
                    android:textColor="#FFF"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/roboto_bold"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/init_screen_sign_up"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp">

                <TextView
                    android:id="@+id/text_horizontal_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already have a Carpool Rider account?"
                    android:textColor="#555B5B"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/roboto_bold"/>

                <TextView
                    android:id="@+id/init_screen_sign_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/text_horizontal_one"
                    android:layout_marginLeft="5dp"
                    android:text="Sign in"
                    android:textColor="#262626"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    app:fontFamily="@font/roboto_bold"/>
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>