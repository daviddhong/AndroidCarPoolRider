<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="Send Email to Reset Password"
            android:textColor="#4264fb"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/textview_emailreset"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="90dp"
            android:background="@drawable/border_blue_rectangle_unfilled"
            android:drawableStart="@drawable/ic_email_24dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Enter in your email"
            android:inputType="textEmailAddress"
            android:paddingLeft="15dp"
            android:textColor="#0077B5"
            android:textSize="20sp" />


        <Button
            android:id="@+id/button_resetpassword"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/border_rectangle_fill_blue"
            android:gravity="center"
            android:text="Send Email"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>


</RelativeLayout>
